<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>

    </style>

    <style name="AppTheme.NoMarginBottomNav" parent="AppTheme">
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="AppBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/bottom_navigation_background</item> <!-- TÅ‚o paska -->
        <item name="itemIconSize">48dp</item> <!-- Rozmiar ikon -->
        <item name="itemTextAppearanceActive">@style/AppBottomNavTextActive</item> <!-- Styl aktywnych etykiet -->
        <item name="itemTextAppearanceInactive">@style/AppBottomNavTextInactive</item> <!-- Styl nieaktywnych etykiet -->
    </style>

    <style name="AppBottomNavTextActive" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/bottom_navigation_background</item> <!-- Kolor aktywnych etykiet -->
    </style>

    <style name="AppBottomNavTextInactive" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/bottom_navigation_background</item> <!-- Kolor nieaktywnych etykiet -->
    </style>


</resources>